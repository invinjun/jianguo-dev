<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_edit_pay_method"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.woniukeji.jianguo.activity.wallte.EditPayMethodActivity">
    <include
        layout="@layout/app_title_bar"
        />

    <RelativeLayout
        android:id="@+id/rl_alipay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/img_alipay"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/icon_zhifubao"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:id="@+id/tv_alipay"
            android:layout_toRightOf="@+id/img_alipay"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝"
            android:textSize="14dp"
            />
        <TextView
            android:id="@+id/tv_ali_account"
            android:layout_below="@+id/tv_alipay"
            android:layout_toRightOf="@+id/img_alipay"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未绑定"
            android:textSize="12dp"
            />

        <Button
            android:id="@+id/img_alipay_unbind"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:src="@mipmap/icon_go"
            android:text="解绑"
            android:textColor="@color/white"
            android:background="@drawable/button_background_pay_edit"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_yinlian"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        >
        <ImageView
            android:id="@+id/img_yinlian"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/card"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:id="@+id/tv_yinlian"
            android:layout_toRightOf="@+id/img_yinlian"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银行卡"
            android:textSize="14dp"
            />
        <TextView
            android:id="@+id/tv_yinlian_account"
            android:layout_below="@+id/tv_yinlian"
            android:layout_toRightOf="@+id/img_yinlian"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未绑定"
            android:textSize="12dp"
            />

        <Button
            android:id="@+id/img_yinlian_unbind"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:src="@mipmap/icon_go"
            android:text="解绑"
            android:textColor="@color/white"
            android:background="@drawable/button_background_pay_edit"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>
</LinearLayout>

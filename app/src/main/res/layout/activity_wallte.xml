<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    tools:context="com.woniukeji.jianguo.activity.mine.CollectActivity">
    <RelativeLayout
                     android:id="@+id/top"
                    android:background="#00a2ff"
                    style="@style/title_bar_style">

        <ImageView
            android:id="@+id/img_back"
            android:src="@mipmap/icon_back"
            android:layout_width="20dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_height="20dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginLeft="23dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:text="我的钱包"
            />
        <ImageView
            android:id="@+id/img_share"
            android:src="@mipmap/icon_install"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginRight="15dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginLeft="23dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />
    </RelativeLayout>


    <com.flyco.tablayout.CommonTabLayout
        android:layout_below="@+id/rl_wallte_info"
        android:id="@+id/tl_6"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        tl:tl_iconVisible="false"
        tl:tl_indicator_corner_radius="1.5dp"
        tl:tl_divider_color="#EAE8E8"
        tl:tl_divider_padding="10dp"
        tl:tl_divider_width="1dp"
        tl:tl_indicator_height="3dp"
        tl:tl_underline_color="#d2d2d2"
        tl:tl_underline_height="1dp"
        tl:tl_indicator_style="NORMAL"
        tl:tl_indicator_color="@color/app_bg"
        tl:tl_textSelectColor="@color/app_bg"
        tl:tl_textUnselectColor="@color/gray"
        tl:tl_textsize="16dp"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/mainPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tl_6" />

    <RelativeLayout
        android:id="@+id/rl_wallte_info"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/white"
        android:layout_below="@+id/top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
   <TextView
       android:id="@+id/tv_money_sum"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="0.0"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="27dp"
       android:gravity="center"
       android:drawableLeft="@mipmap/gold"
       android:drawablePadding="5dp"
       android:textColor="#e98f36"
       android:textSize="20dp"
       />
        <TextView
            android:layout_above="@+id/tv_money_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前金额(元)8.88"
            android:visibility="gone"
            android:textColor="#e98f36"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            />
    <TextView
        android:id="@+id/tv_action_get"
        android:layout_below="@id/tv_money_sum"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:text="我要提现"
        android:textSize="10dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:drawablePadding="8dp"
        android:layout_marginTop="18dp"
        android:background="@color/app_bg"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
</RelativeLayout>
